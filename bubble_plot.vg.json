{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "title": {
    "text": "Distribution of Gross Domestic Product (GDP), Population, and Land Area by Country and Continent (2022)"
  },
  "data": {
    "url": "./Countries.csv"
  },
  "params": [
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Africa",
          "Asia",
          "Europe",
          "North America",
          "Oceania",
          "South America"
        ],
        "labels": [
          "Show All",
          "Africa",
          "Asia",
          "Europe",
          "North America",
          "Oceania",
          "South America"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "transform": [
    { "filter": "datum.GDP > 0" },
    { "filter": "datum.Year == 2022" },
    {
      "filter": "Continent_selection == null || datum['Continent Name'] == Continent_selection"
    },
    {
      "calculate": "datum.GDP/1000000",
      "as": "Gross Domestic Product (in millions)"
    }
  ],
  "encoding": {
    "x": {
      "field": "Population",
      "type": "quantitative",
      "axis": { "tickCount": 5 },
      "scale": { "type": "log", "domain": [1000, 10000000000] }
    },
    "y": {
      "field": "Gross Domestic Product (in millions)",
      "type": "quantitative",
      "axis": { "tickCount": 6 },
      "scale": { "type": "log", "domain": [1, 100000000] },
      "title": "GDP (in millions of USD)"
    }
  },
  "layer": [
    {
      "mark": { "type": "circle", "tooltip": true },
      "encoding": {
        "size": {
          "field": "Land",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1000, 100000, 500000, 1000000, 5000000],
            "range": [20, 40, 80, 160, 360, 720]
          },
          "legend": { "format": ".1s", "title": "Land Area (km²)" }
        },
        "color": {
          "field": "Continent Name",
          "type": "nominal",
          "scale": {
            "domain": [
              "Africa",
              "Asia",
              "Europe",
              "North America",
              "Oceania",
              "South America"
            ],
            "range": [
              "#395989",
              "#0570b0",
              "#b1d5e7",
              "#fdbe85",
              "#fd8d3c",
              "#e6550d"
            ]
          },
          "legend": { "title": "Continent" }
        },
        "opacity": { "value": 0.7 },
        "tooltip": [
          { "field": "Country Name", "type": "nominal", "title": "Country" },
          {
            "field": "Continent Name",
            "type": "nominal",
            "title": "Continent"
          },
          {
            "field": "Gross Domestic Product (in millions)",
            "type": "quantitative",
            "format": ",.2f",
            "title": "GDP (in millions USD)"
          },
          {
            "field": "Population",
            "type": "quantitative",
            "format": ",",
            "title": "Population"
          },
          {
            "field": "Land",
            "type": "quantitative",
            "format": ",.0f",
            "title": "Land Area (km²)"
          }
        ]
      }
    },
    {
        "mark": {
            "type": "text",
            "align": "right",
            "baseline": "middle",
            "dx": -18,
            "fontSize": 10,
            "fontStyle": "italic"
        },
      "encoding": {
        "text": { "field": "Country Name", "type": "nominal" },
        "color": { "value": "black" },
        "opacity": {
          "condition": {
            "test": "datum['Country Name'] == 'China' || datum['Country Name'] == 'United States' || datum['Country Name'] == 'India' || datum['Country Name'] == 'Tuvalu' || datum['Country Name'] == 'Nauru' || datum['Country Name'] == 'Palau'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          { "field": "Country Name", "type": "nominal", "title": "Country" },
          {
            "field": "Continent Name",
            "type": "nominal",
            "title": "Continent"
          },
          {
            "field": "Gross Domestic Product (in millions)",
            "type": "quantitative",
            "format": ",.2f",
            "title": "GDP (in millions USD)"
          },
          {
            "field": "Population",
            "type": "quantitative",
            "format": ",",
            "title": "Population"
          },
          {
            "field": "Land",
            "type": "quantitative",
            "format": ",.0f",
            "title": "Land Area (km²)"
          }
        ]
      }
    }
  ]
}
